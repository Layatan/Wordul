            <Label x:Name="Slot2" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="0" Grid.Column="1"/>
            <Label x:Name="Slot3" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="0" Grid.Column="2"/>
            <Label x:Name="Slot4" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="0" Grid.Column="3"/>
            <Label x:Name="Slot5" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="0" Grid.Column="4"/>
            <Label x:Name="Slot6" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="1" Grid.Column="0"/>
            <Label x:Name="Slot7" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="1" Grid.Column="1"/>
            <Label x:Name="Slot8" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="1" Grid.Column="2"/>
            <Label x:Name="Slot9" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="1" Grid.Column="3"/>
            <Label x:Name="Slot10" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="1" Grid.Column="4"/>
            <Label x:Name="Slot11" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="2" Grid.Column="0"/>
            <Label x:Name="Slot12" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="2" Grid.Column="1"/>
            <Label x:Name="Slot13" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="2" Grid.Column="2"/>
            <Label x:Name="Slot14" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="2" Grid.Column="3"/>
            <Label x:Name="Slot15" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="2" Grid.Column="4"/>
            <Label x:Name="Slot16" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="3" Grid.Column="0"/>
            <Label x:Name="Slot17" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="3" Grid.Column="1"/>
            <Label x:Name="Slot18" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="3" Grid.Column="2"/>
            <Label x:Name="Slot19" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="3" Grid.Column="3"/>
            <Label x:Name="Slot20" FontSize="40" HorizontalTextAlignment="Center" BackgroundColor="Gray" Padding="0,-10,0,0" Grid.Row="3" Grid.Column="4"/>
        </Grid>
        <Grid x:Name="KB" RowDefinitions="40,40*,40"  RowSpacing="10" ColumnSpacing="5" HorizontalOptions="Fill" VerticalOptions="EndAndExpand" Padding="10,14,10,20" BackgroundColor="Black">
            <Button x:Name="btnQ" Text="Q" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="0" Clicked="Q_Clicked"/>
            <Button x:Name="btnW" Text="W" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="1" Clicked="W_Clicked"/>
            <Button x:Name="btnE" Text="E" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="2" Clicked="E_Clicked"/>
            <Button x:Name="btnR" Text="R" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="3" Clicked="R_Clicked"/>
            <Button x:Name="btnT" Text="T" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="4" Clicked="T_Clicked"/>
