            <Button x:Name="btnP" Text="P" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="0" Grid.Column="9" Clicked="P_Clicked"/>

            <Button x:Name="btnA" Text="A" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="0" Clicked="A_Clicked"/>
            <Button x:Name="btnS" Text="S" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="1" Clicked="S_Clicked"/>
            <Button x:Name="btnD" Text="D" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="2" Clicked="D_Clicked"/>
            <Button x:Name="btnF" Text="F" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="3" Clicked="F_Clicked"/>
            <Button x:Name="btnG" Text="G" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="4" Clicked="G_Clicked"/>
            <Button x:Name="btnH" Text="H" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="5" Clicked="H_Clicked"/>
            <Button x:Name="btnJ" Text="J" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="6" Clicked="J_Clicked"/>
