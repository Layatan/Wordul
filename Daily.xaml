            <Button x:Name="btnEnter" Text="Enter" FontSize="15" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="8" Grid.ColumnSpan="2" Clicked="Enter_Clicked"/>
            <Button x:Name="btnZ" Text="Z" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="1" Clicked="Z_Clicked"/>
            <Button x:Name="btnX" Text="X" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="2" Clicked="X_Clicked"/>
            <Button x:Name="btnC" Text="C" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="3" Clicked="C_Clicked"/>
            <Button x:Name="btnV" Text="V" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="4" Clicked="V_Clicked"/>
            <Button x:Name="btnB" Text="B" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="5" Clicked="B_Clicked"/>
            <Button x:Name="btnN" Text="N" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="6" Clicked="N_Clicked"/>
            <Button x:Name="btnM" Text="M" FontSize="30" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="2" Grid.Column="7" Clicked="M_Clicked"/>
            <Button x:Name="btnClear" Text="Clear" FontSize="15" HorizontalOptions="CenterAndExpand" Padding="0,-2,0,0" BackgroundColor="White" TextColor="Black" Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="2" Clicked="Clear_Clicked"/>
        </Grid>

    </StackLayout>

</ContentPage>
